{
	"private": true,
	"scripts": {
		"start": "parcel watch source/manifest.json --dist-dir distribution --no-cache --no-hmr",
		"start:firefox": "web-ext run",
		"start:chrome": "web-ext run -t chromium",
		"build": "parcel build source/manifest.json --no-content-hash --no-source-maps --dist-dir distribution --no-cache --detailed-report 0",
		"lint": "xo && stylelint source/**/*.css",
		"lint:fix": "xo --fix && stylelint source/**/*.css --fix"
	},
	"dependencies": {
		"webext-base-css": "^1.4.0",
		"webext-options-sync": "^3.0.1",
		"webextension-polyfill": "^0.8.0"
	},
	"devDependencies": {
		"@parcel/config-webextension": "^2.3.2",
		"@parcel/transformer-image": "^2.3.2",
		"parcel": "^2.3.2",
		"stylelint": "^14.6.0",
		"stylelint-config-xo": "^0.21.0",
		"web-ext": "^6.8.0",
		"xo": "^0.48.0"
	},
	"browserslist": [
		"last 1 Chrome version",
		"last 1 Firefox version"
	],
	"xo": {
		"envs": [
			"browser"
		],
		"rules": {
			"no-unused-vars": [
				"error",
				{
					"varsIgnorePattern": "browser"
				}
			],
			"unicorn/filename-case": [
				"error",
				{
					"case": "camelCase"
				}
			]
		}
	},
	"stylelint": {
		"extends": "stylelint-config-xo"
	},
	"webExt": {
		"sourceDir": "distribution"
	}
}
